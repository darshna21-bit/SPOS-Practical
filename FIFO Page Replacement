// üß† FIFO (First-In-First-Out) Page Replacement Algorithm in Java
// The oldest page (first inserted) is replaced first when a new page needs to be loaded.

import java.util.*; 
public class Fifo { // Class name must match file name: Fifo.java

    public static void main(String[] args) {

        // Step 1Ô∏è‚É£: Create Scanner object to take input from the user
        Scanner scanner = new Scanner(System.in);

        // Step 2Ô∏è‚É£: Input number of frames (slots in physical memory)
        System.out.print("Enter the number of frames: ");
        int numberOfFrames = scanner.nextInt();

        // Step 3Ô∏è‚É£: Input number of pages (length of reference string)
        System.out.print("Enter the number of pages: ");
        int numberOfPages = scanner.nextInt();

        // Step 4Ô∏è‚É£: Input the reference string of pages
        System.out.print("Enter the page reference string (space-separated): ");
        int[] pageReferenceString = new int[numberOfPages];

        // Read each page number and store it in the array
        for (int i = 0; i < numberOfPages; i++) {
            pageReferenceString[i] = scanner.nextInt();
        }

        // Step 5Ô∏è‚É£: Initialize the memory frames with -1 (indicating empty)
        int[] frames = new int[numberOfFrames];
        Arrays.fill(frames, -1); // Fill all frames as empty (-1)

        // Step 6Ô∏è‚É£: Initialize counters and index pointer
        int pageFaults = 0;  // To count total page faults
        int currentIndex = 0; // To track which frame to replace (FIFO order)

        // Step 7Ô∏è‚É£: Process each page from the reference string
        for (int page : pageReferenceString) {
            boolean pageHit = false; // Flag to check if page already exists in frames

            // Step 8Ô∏è‚É£: Check if the current page is already loaded in memory
            for (int frame : frames) {
                if (frame == page) {
                    pageHit = true; // Page is already present (page hit)
                    break;
                }
            }

            // Step 9Ô∏è‚É£: If page not found ‚Üí Page Fault occurs
            if (!pageHit) {
                // Replace the oldest page with the new one (FIFO)
                frames[currentIndex] = page;

                // Move to next frame index (circular rotation)
                currentIndex = (currentIndex + 1) % numberOfFrames;

                // Increase page fault count
                pageFaults++;
            }

            // Step üîü: Display current state of frames
            System.out.print("Frames: ");
            for (int frame : frames) {
                System.out.print(frame + " ");
            }
            System.out.println();
        }

        System.out.println("Total Page Faults: " + pageFaults);
        System.out.println("Page Faults ratio: " + pageFaults + ":" + numberOfPages);

        // Step 12Ô∏è‚É£: Close Scanner to prevent resource leak
        scanner.close();
    }
}
